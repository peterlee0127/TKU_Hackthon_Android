<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_vote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write" >

    <!-- The main content view -->

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/class_list_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/problem_no_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="34dp"
	        android:text="@string/nullString" />

	    <Button
	        android:id="@+id/d_btn"
	        android:layout_width="125dp"
	        android:layout_height="125dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/c_btn"
	        android:layout_marginRight="16dp"
	        android:layout_marginButtom="16dp"
	        android:background="@drawable/d_button" />

	    <Button
	        android:id="@+id/b_btn"
	        android:layout_width="125dp"
	        android:layout_height="125dp"
	        android:layout_alignBottom="@+id/a_btn"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/a_btn"
	        android:layout_marginRight="16dp"
	        android:background="@drawable/b_button" />

	    <Button
	        android:id="@+id/a_btn"
	        android:layout_width="125dp"
	        android:layout_height="125dp"
	        android:layout_below="@+id/problem_no_tv"
	        android:layout_marginLeft="16dp"
	        android:background="@drawable/a_button" />

	    <Button
	        android:id="@+id/c_btn"
	        android:layout_width="125dp"
	        android:layout_height="125dp"
	        android:layout_alignLeft="@+id/a_btn"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="56dp"
	        android:layout_marginButtom="16dp"
	        android:background="@drawable/c_button" />
	
	</RelativeLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer_vote"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/write"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>
